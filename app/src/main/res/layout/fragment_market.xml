<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="16dp"
        android:orientation="vertical"
        tools:context=".view.MarketFragment">

        <TextView
            android:id="@+id/text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_bold"
            android:text="Add new book"
            android:layout_marginBottom="16dp"
            android:textColor="@color/black"
            android:textSize="24sp"/>

        <EditText
            android:id="@+id/name_add"
            android:layout_width="match_parent"
            android:hint="Name of book"
            android:paddingStart="16dp"
            android:layout_marginBottom="16dp"
            android:textColor="@color/black"
            android:fontFamily="@font/poppins"
            android:background="@drawable/background_edit_text"
            android:layout_height="45dp"/>

        <EditText
            android:id="@+id/author_add"
            android:layout_width="match_parent"
            android:hint="Authors book"
            android:paddingStart="16dp"
            android:layout_marginBottom="16dp"
            android:textColor="@color/black"
            android:fontFamily="@font/poppins"
            android:background="@drawable/background_edit_text"
            android:layout_height="45dp"/>

        <EditText
            android:id="@+id/desc_add"
            android:layout_width="match_parent"
            android:hint="Description"
            android:paddingStart="16dp"
            android:layout_marginBottom="16dp"
            android:textColor="@color/black"
            android:fontFamily="@font/poppins"
            android:background="@drawable/background_edit_text"
            android:layout_height="45dp"/>

        <EditText
            android:id="@+id/price_add"
            android:layout_width="match_parent"
            android:hint="Price"
            android:paddingStart="16dp"
            android:layout_marginBottom="16dp"
            android:fontFamily="@font/poppins"
            android:textColor="@color/black"
            android:background="@drawable/background_edit_text"
            android:layout_height="45dp"/>

        <EditText
            android:id="@+id/rating_add"
            android:layout_width="match_parent"
            android:hint="Rating"
            android:paddingStart="16dp"
            android:layout_marginBottom="28dp"
            android:textColor="@color/black"
            android:fontFamily="@font/poppins"
            android:background="@drawable/background_edit_text"
            android:layout_height="45dp"/>

        <Button
            android:id="@+id/add_new_book_button"
            android:layout_width="match_parent"
            android:textColor="@color/white"
            android:background="@drawable/background_button"
            android:text="ADD"
            android:layout_height="45dp"/>

    </LinearLayout>

</layout>
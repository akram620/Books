<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:id="@+id/itemPopularBook"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_marginEnd="22dp"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/card_popular"
            android:layout_width="115dp"
            android:layout_height="175dp"
            app:cardCornerRadius="8dp">

            <ImageView
                android:id="@+id/imageBook"
                android:background="#F5F8F7"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/book2" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/name_book_popular"
            android:layout_width="115dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            app:fontFamily="@font/poppins_bold"
            android:gravity="start"
            android:text="Fashionopolis"
            android:textColor="@color/black"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/author_book_popular"
            android:layout_width="115dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:gravity="start"
            android:text="Dana Thomas"
            android:textColor="#06070D"
            android:textSize="12sp" />

    </LinearLayout>


</layout>